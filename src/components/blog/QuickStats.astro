---
interface Stat {
  value: string;
  label: string;
  icon?: string;
  trend?: 'up' | 'down' | 'neutral';
}

interface Props {
  stats: Stat[];
  columns?: 2 | 3 | 4;
}

const { stats, columns = 3 } = Astro.props;

const gridClasses = {
  2: 'grid-cols-1 md:grid-cols-2',
  3: 'grid-cols-1 md:grid-cols-3',
  4: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-4'
};

const trendIcons = {
  up: 'ğŸ“ˆ',
  down: 'ğŸ“‰',
  neutral: 'â¡ï¸'
};

const trendColors = {
  up: 'text-success',
  down: 'text-destructive',
  neutral: 'text-muted-foreground'
};
---

<div class={`grid ${gridClasses[columns]} gap-4 my-8`}>
  {stats.map((stat) => (
    <div class="relative group bg-gradient-to-br from-card to-muted border border-border/50 rounded-xl p-5 shadow-card hover:shadow-card-hover transition-all duration-300 hover:-translate-y-0.5">
      <div class="flex items-center justify-between mb-2">
        {stat.icon && (
          <span class="text-3xl opacity-80 group-hover:scale-110 transition-transform duration-300">
            {stat.icon}
          </span>
        )}
        {stat.trend && (
          <span class={`text-xl ${trendColors[stat.trend]}`}>
            {trendIcons[stat.trend]}
          </span>
        )}
      </div>
      
      <div class="text-3xl font-bold bg-gradient-to-r from-foreground to-foreground/70 bg-clip-text text-transparent mb-1 tabular-nums">
        {stat.value}
      </div>
      
      <div class="text-sm text-muted-foreground font-medium">
        {stat.label}
      </div>
      
      <div class="absolute inset-0 bg-gradient-to-t from-primary/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl pointer-events-none"></div>
    </div>
  ))}
</div>
