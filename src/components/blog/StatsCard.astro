---
interface Props {
  number: string;
  label: string;
  color?: 'primary' | 'success' | 'warning' | 'info' | 'destructive';
  icon?: string;
}

const { number, label, color = 'primary', icon } = Astro.props;

const colorClasses = {
  primary: {
    gradient: 'from-primary via-primary/80 to-primary/60',
    bg: 'from-card to-primary/5',
    border: 'border-primary/20',
  },
  success: {
    gradient: 'from-success via-success/80 to-success/60',
    bg: 'from-card to-success/5',
    border: 'border-success/20',
  },
  warning: {
    gradient: 'from-warning via-warning/80 to-warning/60',
    bg: 'from-card to-warning/5',
    border: 'border-warning/20',
  },
  info: {
    gradient: 'from-info via-info/80 to-info/60',
    bg: 'from-card to-info/5',
    border: 'border-info/20',
  },
  destructive: {
    gradient: 'from-destructive via-destructive/80 to-destructive/60',
    bg: 'from-card to-destructive/5',
    border: 'border-destructive/20',
  }
};

const styles = colorClasses[color];
---

<div 
  class={`group relative overflow-hidden text-center p-6 md:p-8 bg-gradient-to-br ${styles.bg} rounded-xl border ${styles.border} shadow-card hover:shadow-card-hover transition-all duration-300 hover:-translate-y-1`}
>
  {icon && (
    <div class="text-3xl mb-3 opacity-80 group-hover:scale-110 transition-transform duration-300">
      {icon}
    </div>
  )}
  <div class={`text-4xl md:text-5xl font-extrabold bg-gradient-to-r ${styles.gradient} bg-clip-text text-transparent mb-3 tabular-nums`}>
    {number}
  </div>
  <div class="text-sm md:text-base text-muted-foreground font-medium leading-tight">
    {label}
  </div>
  <div class="absolute inset-0 bg-gradient-to-t from-transparent to-white/5 dark:to-white/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
</div>
