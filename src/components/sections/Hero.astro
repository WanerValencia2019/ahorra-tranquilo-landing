---
import { Button } from '../ui/Button';
import { Badge } from '../ui/Badge';
---

<section
  id="hero"
  class="relative overflow-hidden min-h-[90vh] max-h-[95vh] flex items-center bg-gradient-to-br from-background via-primary/5 to-background pt-6 pb-12 md:pt-8 md:pb-16"
>
