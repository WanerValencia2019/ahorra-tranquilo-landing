        <div class="relative rounded-2xl lg:rounded-3xl overflow-hidden shadow-2xl border-2 border-border/50 bg-card backdrop-blur-sm group">
          <!-- Mobile: imagen vertical -->
          <img
            src={dashboardMobile.src}
            alt="Vista previa de Ahorra Tranquilo Dashboard"
            class="w-full h-auto group-hover:scale-105 transition-transform duration-700 lg:hidden max-w-sm mx-auto"
            loading="eager"
          />
          <!-- Desktop: imagen horizontal -->
          <img
            src={dashboardImage.src}
            alt="Vista previa de Ahorra Tranquilo Dashboard"
            class="w-full h-auto group-hover:scale-105 transition-transform duration-700 hidden lg:block"
            loading="eager"
