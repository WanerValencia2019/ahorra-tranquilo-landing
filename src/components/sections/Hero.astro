                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>
            <span class="group-hover:text-foreground transition-colors">ConfiguraciÃ³n en 2 minutos</span>
          </div>
        </div>
      </div>

      <!-- Mockup with enhanced animations -->
      <div class="relative animate-fade-in-up animation-delay-300">
                <!-- Badge with pulse -->
        <div class="inline-block animate-bounce-soft">
          <Badge client:load variant="default" className="gap-2 text-xs px-4 py-4 shadow-lg shadow-primary/20">
            <span class="relative flex h-3 w-3">
