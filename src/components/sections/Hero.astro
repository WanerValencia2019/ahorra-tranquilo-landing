  <div class="absolute inset-0">
    <!-- Gradient orbs -->
    <div class="absolute top-20 -left-20 w-72 h-72 bg-primary/20 rounded-full mix-blend-multiply filter blur-3xl animate-float opacity-70"></div>
    <div class="absolute bottom-20 -right-20 w-96 h-96 bg-success/20 rounded-full mix-blend-multiply filter blur-3xl animate-float animation-delay-300 opacity-70"></div>
