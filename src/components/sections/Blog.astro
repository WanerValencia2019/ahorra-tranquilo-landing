---
import { getCollection } from 'astro:content';
import { Card, CardContent, CardDescription, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { Button } from '@/components/ui/Button';
import { BookOpen, Clock, ArrowRight, TrendingUp, PiggyBank, Target, DollarSign } from 'lucide-react';

// Get all blog posts and sort by date
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

// Take only the first 3 posts for the homepage
const blogPosts = sortedPosts.slice(0, 3);

// Icon mapping for categories
const categoryIcons = {
  'Educación Financiera': TrendingUp,
  'Presupuestos': Target,
  'Ahorro': PiggyBank,
  'Inversión': DollarSign,
  'Deudas': DollarSign,
  'Herramientas': Target,
  'Tips': TrendingUp,
};

// Format date
function formatDate(date: Date) {
  return date.toLocaleDateString('es-CO', { 
    year: 'numeric', 
    month: 'short', 
    day: 'numeric' 
  });
}
---

<section id="blog" class="py-8 md:py-12 bg-gradient-to-b from-accent/30 to-background">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-6 md:mb-8 animate-fade-in-up">
      <Badge variant="outline" class="mb-4">
        <BookOpen class="size-3" />
        Blog
      </Badge>
      <h2 class="text-3xl md:text-4xl font-semibold text-foreground mb-4">
        Aprende a gestionar tu dinero
      </h2>
      <p class="text-muted-foreground text-lg max-w-2xl mx-auto">
        Tips, guías y estrategias para mejorar tu salud financiera
      </p>
    </div>

    <!-- Featured Post -->
    {
      blogPosts
        .filter((post) => post.data.featured)
        .map((post) => {
          const Icon = categoryIcons[post.data.category] || BookOpen;
          return (
          <Card className="mb-8 md:mb-12 overflow-hidden group hover:shadow-2xl transition-all duration-300 animate-fade-in-up">
            <div class="grid md:grid-cols-2 gap-0">
              <!-- Image -->
              <div class="relative overflow-hidden bg-muted h-64 md:h-auto">
                <img
                  src={post.data.image || 'https://placehold.co/600x400/14b8a6/ffffff?text=Blog+Post'}
                  alt={post.data.title}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                  loading="lazy"
                />
                <div class="absolute top-4 left-4">
                  <Badge className="bg-primary text-primary-foreground">Destacado</Badge>
                </div>
              </div>

              <!-- Content -->
              <CardContent className="p-6 md:p-8 flex flex-col justify-center">
                <div class="flex items-center gap-4 mb-4">
                  <Badge variant="outline" className="gap-1">
                    <Icon className="size-3" />
                    {post.data.category}
                  </Badge>
                  <span class="text-sm text-muted-foreground flex items-center gap-1">
                    <Clock class="size-4" />
                    {post.data.readTime || '5 min'}
                  </span>
                </div>

                <h3 class="text-2xl md:text-3xl font-semibold text-foreground mb-3 group-hover:text-primary transition-colors">
                  {post.data.title}
                </h3>

                <p class="text-muted-foreground mb-6 leading-relaxed">{post.data.description}</p>

                <div class="flex items-center justify-between">
                  <span class="text-sm text-muted-foreground">{formatDate(post.data.pubDate)}</span>
                  <a href={`/blog/${post.slug}`}>
                    <Button client:load variant="default" className="gap-2">
                      Leer artículo
                      <ArrowRight class="size-4" />
                    </Button>
                  </a>
                </div>
              </CardContent>
            </div>
          </Card>
        )})
    }

    <!-- Regular Posts Grid -->
    <div class="grid md:grid-cols-2 gap-6 md:gap-8">
      {
        blogPosts
          .filter((post) => !post.data.featured)
          .map((post, index) => {
            const Icon = categoryIcons[post.data.category] || BookOpen;
            return (
            <Card className={`overflow-hidden group hover:shadow-xl transition-all duration-300 animate-fade-in-up animation-delay-${(index + 1) * 200}`}>
              <div class="relative overflow-hidden bg-muted h-48">
                <img
                  src={post.data.image || 'https://placehold.co/600x400/14b8a6/ffffff?text=Blog+Post'}
                  alt={post.data.title}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                  loading="lazy"
                />
              </div>

              <CardContent className="p-6">
                <div class="flex items-center gap-4 mb-3">
                  <Badge variant="outline" className="gap-1">
                    <Icon className="size-3" />
                    {post.data.category}
                  </Badge>
                  <span class="text-sm text-muted-foreground flex items-center gap-1">
                    <Clock class="size-4" />
                    {post.data.readTime || '5 min'}
                  </span>
                </div>

                <h3 class="text-xl font-semibold text-foreground mb-2 group-hover:text-primary transition-colors line-clamp-2">
                  {post.data.title}
                </h3>

                <p class="text-muted-foreground mb-4 line-clamp-2">{post.data.description}</p>

                <div class="flex items-center justify-between">
                  <span class="text-sm text-muted-foreground">{formatDate(post.data.pubDate)}</span>
                  <a href={`/blog/${post.slug}`}>
                    <Button client:load variant="ghost" size="sm" className="gap-2">
                      Leer más
                      <ArrowRight class="size-4" />
                    </Button>
                  </a>
                </div>
              </CardContent>
            </Card>
          )})
      }
    </div>

    <!-- CTA to Blog -->
    <div class="text-center mt-12 animate-fade-in-up animation-delay-400">
      <a href="/blog">
        <Button client:load variant="outline" size="lg" className="gap-2">
          Ver todos los artículos
          <ArrowRight class="size-4" />
        </Button>
      </a>
    </div>
  </div>
</section>
