---
import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import { Badge } from '../../components/ui/Badge';
import { Button } from '../../components/ui/Button';
import { ArrowLeft, Clock, Calendar, User, Share2, TrendingUp, PiggyBank, Target, DollarSign, BookOpen } from 'lucide-react';

export const getStaticPaths = (async () => {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}) satisfies GetStaticPaths;

const { entry } = Astro.props;
const { Content } = await entry.render();

// Icon mapping for categories
const categoryIcons = {
  'Educación Financiera': TrendingUp,
  'Presupuestos': Target,
  'Ahorro': PiggyBank,
  'Inversión': DollarSign,
  'Deudas': DollarSign,
  'Herramientas': Target,
  'Tips': TrendingUp,
};

const Icon = categoryIcons[entry.data.category] || BookOpen;

// Format date
function formatDate(date: Date) {
  return date.toLocaleDateString('es-CO', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
}

// Get related posts (same category, excluding current)
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(post => post.data.category === entry.data.category && post.slug !== entry.slug)
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 3);
---

<Layout 
  title={`${entry.data.title} | Blog Ahorra Tranquilo`}
  description={entry.data.description}
  ogImage={entry.data.image}
>
  <Navbar />
  <main class="min-h-screen">
    <!-- Hero Section -->
    <article>
      <header class="relative py-12 md:py-16 overflow-hidden bg-gradient-to-b from-primary/5 to-background">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
          <!-- Breadcrumb -->
          <nav class="flex items-center gap-2 text-sm text-muted-foreground mb-8">
            <a href="/" class="hover:text-primary transition-colors">Inicio</a>
            <span>/</span>
            <a href="/blog" class="hover:text-primary transition-colors">Blog</a>
            <span>/</span>
            <span class="text-foreground">{entry.data.category}</span>
          </nav>

          <div class="max-w-4xl mx-auto">
            <!-- Category Badge -->
            <div class="flex items-center gap-3 mb-6">
              <Badge client:load variant="default" className="gap-2">
                <Icon className="size-4" />
                {entry.data.category}
              </Badge>
              {entry.data.featured && (
                <Badge client:load variant="outline">⭐ Destacado</Badge>
              )}
            </div>

            <!-- Title -->
            <h1 class="text-3xl md:text-4xl lg:text-5xl font-extrabold tracking-tight mb-6">
              {entry.data.title}
            </h1>

            <!-- Description -->
            <p class="text-xl text-muted-foreground mb-8">
              {entry.data.description}
            </p>

            <!-- Meta Info -->
            <div class="flex flex-wrap items-center gap-4 md:gap-6 text-sm text-muted-foreground">
              <div class="flex items-center gap-2">
                <User className="size-4" />
                <span>{entry.data.author}</span>
              </div>
              <div class="flex items-center gap-2">
                <Calendar className="size-4" />
                <time datetime={entry.data.pubDate.toISOString()}>
                  {formatDate(entry.data.pubDate)}
                </time>
              </div>
              {entry.data.readTime && (
                <div class="flex items-center gap-2">
                  <Clock className="size-4" />
                  <span>{entry.data.readTime}</span>
                </div>
              )}
            </div>
          </div>
        </div>
      </header>

      <!-- Featured Image -->
      {entry.data.image && (
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 -mt-8 mb-12">
          <div class="max-w-4xl mx-auto">
            <div class="relative overflow-hidden rounded-2xl shadow-2xl">
              <img
                src={entry.data.image}
                alt={entry.data.title}
                class="w-full h-auto"
                loading="eager"
              />
            </div>
          </div>
        </div>
      )}

      <!-- Article Content -->
      <section class="py-8 md:py-12">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-3xl mx-auto">
            <!-- Prose Content -->
            <div class="prose prose-slate dark:prose-invert prose-lg max-w-none
              prose-headings:font-bold prose-headings:tracking-tight
              prose-h2:text-3xl prose-h2:mt-12 prose-h2:mb-6
              prose-h3:text-2xl prose-h3:mt-8 prose-h3:mb-4
              prose-h4:text-xl prose-h4:mt-6 prose-h4:mb-3
              prose-p:leading-relaxed prose-p:mb-6
              prose-a:text-primary prose-a:no-underline hover:prose-a:underline
              prose-strong:text-foreground prose-strong:font-semibold
              prose-ul:my-6 prose-ul:space-y-2
              prose-ol:my-6 prose-ol:space-y-2
              prose-li:leading-relaxed
              prose-blockquote:border-l-primary prose-blockquote:bg-primary/5 prose-blockquote:py-4 prose-blockquote:px-6 prose-blockquote:rounded-r-lg
              prose-code:text-primary prose-code:bg-primary/10 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:before:content-none prose-code:after:content-none
              prose-pre:bg-slate-900 prose-pre:text-slate-100
              prose-img:rounded-xl prose-img:shadow-lg
              prose-hr:border-border prose-hr:my-12
              prose-table:border prose-table:border-border
              prose-th:bg-muted prose-th:p-3
              prose-td:p-3 prose-td:border prose-td:border-border
            ">
              <Content />
            </div>

            <!-- Tags -->
            {entry.data.tags && entry.data.tags.length > 0 && (
              <div class="mt-12 pt-8 border-t">
                <h3 class="text-sm font-semibold text-muted-foreground mb-3">Tags:</h3>
                <div class="flex flex-wrap gap-2">
                  {entry.data.tags.map((tag) => (
                    <Badge client:load variant="outline" className="text-sm">
                      #{tag}
                    </Badge>
                  ))}
                </div>
              </div>
            )}

            <!-- Share -->
            <div class="mt-8 pt-8 border-t">
              <div class="flex items-center justify-between">
                <h3 class="text-sm font-semibold text-muted-foreground">Compartir:</h3>
                <div class="flex gap-2">
                  <Button 
                    client:load 
                    variant="outline" 
                    size="sm"
                    onClick={() => {
                      if (navigator.share) {
                        navigator.share({
                          title: entry.data.title,
                          text: entry.data.description,
                          url: window.location.href,
                        });
                      }
                    }}
                  >
                    <Share2 className="size-4" />
                  </Button>
                </div>
              </div>
            </div>

            <!-- Back to Blog -->
            <div class="mt-12 pt-8 border-t">
              <a href="/blog" class="inline-flex items-center gap-2 text-muted-foreground hover:text-primary transition-colors">
                <ArrowLeft className="size-4" />
                Volver al blog
              </a>
            </div>
          </div>
        </div>
      </section>
    </article>

    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <section class="py-16 md:py-24 bg-accent/30">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-6xl mx-auto">
            <h2 class="text-2xl md:text-3xl font-bold mb-8">Artículos relacionados</h2>
            <div class="grid md:grid-cols-3 gap-6">
              {relatedPosts.map((post) => {
                const RelatedIcon = categoryIcons[post.data.category] || BookOpen;
                return (
                  <a href={`/blog/${post.slug}`} class="group">
                    <div class="bg-card rounded-xl overflow-hidden border hover:shadow-lg transition-all">
                      <div class="relative overflow-hidden bg-muted h-40">
                        <img
                          src={post.data.image || 'https://placehold.co/600x400/14b8a6/ffffff?text=Blog+Post'}
                          alt={post.data.title}
                          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                          loading="lazy"
                        />
                      </div>
                      <div class="p-4">
                        <Badge client:load variant="outline" className="gap-1 mb-2">
                          <RelatedIcon className="size-3" />
                          {post.data.category}
                        </Badge>
                        <h3 class="font-semibold text-foreground group-hover:text-primary transition-colors line-clamp-2 mb-2">
                          {post.data.title}
                        </h3>
                        <p class="text-sm text-muted-foreground line-clamp-2">
                          {post.data.description}
                        </p>
                      </div>
                    </div>
                  </a>
                );
              })}
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- CTA Section -->
    <section class="py-16 md:py-24 bg-gradient-to-r from-primary to-success">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="max-w-2xl mx-auto text-white">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            ¿Listo para tomar el control de tus finanzas?
          </h2>
          <p class="text-white/80 text-lg mb-8">
            Empieza hoy mismo con Ahorra Tranquilo. Es gratis, fácil y diseñado para colombianos.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="https://app.ahorratranquilo.com" target="_blank" rel="noopener noreferrer">
              <Button client:load size="lg" variant="secondary" className="font-semibold">
                Crear Cuenta Gratis
              </Button>
            </a>
            <a href="/funcionalidades">
              <Button client:load size="lg" variant="outline" className="font-semibold bg-white/10 text-white border-white hover:bg-white hover:text-primary">
                Ver Funcionalidades
              </Button>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
