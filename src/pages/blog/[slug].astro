---
import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import { Badge } from '../../components/ui/Badge';
import { Button } from '../../components/ui/Button';
import { ArrowLeft, Clock, Calendar, User, Share2, TrendingUp, PiggyBank, Target, DollarSign, BookOpen } from 'lucide-react';
import '../../styles/blog-prose.css';
import { Image } from 'astro:assets';

// Import all blog images dynamically
const images = import.meta.glob('../../assets/blogs/*.{png,jpg,jpeg,webp}', { eager: true });

export const getStaticPaths = (async () => {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}) satisfies GetStaticPaths;

const { entry } = Astro.props;
const { Content } = await entry.render();

// Get the image for this post
const imagePath = entry.data.image ? `../../assets/blogs/${entry.data.image.split('/').pop()}` : null;
const featuredImage = imagePath && images[imagePath] ? images[imagePath].default : null;

// Icon mapping for categories
const categoryIcons = {
  'Educación Financiera': TrendingUp,
  'Presupuestos': Target,
  'Ahorro': PiggyBank,
  'Inversión': DollarSign,
  'Deudas': DollarSign,
  'Herramientas': Target,
  'Tips': TrendingUp,
};

const Icon = categoryIcons[entry.data.category] || BookOpen;

// Format date
function formatDate(date: Date) {
  return date.toLocaleDateString('es-CO', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
}

// Get related posts (same category, excluding current)
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(post => post.data.category === entry.data.category && post.slug !== entry.slug)
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 3);
---

<Layout 
  title={`${entry.data.title} | Blog Ahorra Tranquilo`}
  description={entry.data.description}
  ogImage={featuredImage}
>
  <Navbar />
  <main class="min-h-screen bg-gradient-to-b from-background via-primary/5 to-background">
    <!-- Hero Section with Gradient Background -->
    <article>
      <header class="relative py-8 md:py-10 overflow-hidden">
        <!-- Animated Background -->
        <div class="absolute inset-0 bg-gradient-to-br from-primary/10 via-success/10 to-info/10"></div>
        <div class="absolute inset-0 opacity-20">
          <div class="absolute top-0 left-1/4 w-96 h-96 bg-primary rounded-full mix-blend-multiply filter blur-3xl animate-blob"></div>
          <div class="absolute top-0 right-1/4 w-96 h-96 bg-success rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-2000"></div>
          <div class="absolute bottom-0 left-1/3 w-96 h-96 bg-info rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-4000"></div>
        </div>

        <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
          <!-- Breadcrumb -->
          <nav class="flex items-center gap-2 text-sm text-muted-foreground mb-8">
            <a href="/" class="hover:text-primary transition-colors font-medium">Inicio</a>
            <span>/</span>
            <a href="/blog" class="hover:text-primary transition-colors font-medium">Blog</a>
            <span>/</span>
            <span class="text-foreground font-semibold">{entry.data.category}</span>
          </nav>

          <div class="max-w-4xl mx-auto">
            <!-- Category Badge -->
            <div class="flex items-center gap-3 mb-6 animate-fade-in">
              <Badge client:load variant="default" className="gap-2 text-base px-4 py-2">
                <Icon className="size-5" />
                {entry.data.category}
              </Badge>
              {entry.data.featured && (
                <Badge client:load className="bg-gradient-to-r from-warning to-warning/60 text-white border-0 px-4 py-2 text-base">
                  ⭐ Destacado
                </Badge>
              )}
            </div>

            <!-- Title with Gradient -->
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold tracking-tight mb-6 bg-gradient-to-r from-foreground to-foreground/70 bg-clip-text text-transparent animate-fade-in-up">
              {entry.data.title}
            </h1>

            <!-- Description -->
            <p class="text-xl md:text-2xl text-muted-foreground mb-8 leading-relaxed animate-fade-in-up animation-delay-200">
              {entry.data.description}
            </p>

            <!-- Meta Info with Cards -->
            <div class="flex flex-wrap gap-4 animate-fade-in-up animation-delay-400">
              <div class="flex items-center gap-2 bg-card/80 backdrop-blur-sm px-4 py-3 rounded-lg border shadow-sm">
                <User className="size-5 text-primary" />
                <span class="font-medium">{entry.data.author}</span>
              </div>
              <div class="flex items-center gap-2 bg-card/80 backdrop-blur-sm px-4 py-3 rounded-lg border shadow-sm">
                <Calendar className="size-5 text-primary" />
                <time datetime={entry.data.pubDate.toISOString()}>
                  {formatDate(entry.data.pubDate)}
                </time>
              </div>
              {entry.data.readTime && (
                <div class="flex items-center gap-2 bg-card/80 backdrop-blur-sm px-4 py-3 rounded-lg border shadow-sm">
                  <Clock className="size-5 text-primary" />
                  <span>{entry.data.readTime}</span>
                </div>
              )}
            </div>
          </div>
        </div>
      </header>

      <!-- Featured Image with Parallax Effect -->
      {featuredImage && (
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 mb-16">
          <div class="max-w-5xl mx-auto">
            <div class="relative overflow-hidden rounded-3xl shadow-2xl group">
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent z-10"></div>
              <Image
                src={featuredImage}
                alt={entry.data.title}
                class="w-full h-auto group-hover:scale-105 transition-transform duration-700"
                loading="eager"
              />
            </div>
          </div>
        </div>
      )}

      <!-- Article Content with Sidebar Layout -->
      <section class="pb-8 md:pb-10">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-7xl mx-auto">
            <div class="grid lg:grid-cols-[1fr_300px] gap-12">
              <!-- Main Content -->
              <div class="min-w-0">
                <article class="prose-blog">
                  <Content />
                </article>

                <!-- Tags -->
                {entry.data.tags && entry.data.tags.length > 0 && (
                  <div class="mt-12">
                    <h3 class="text-sm font-semibold text-muted-foreground mb-3">Etiquetas</h3>
                    <div class="flex flex-wrap gap-2">
                      {entry.data.tags.map((tag) => (
                        <Badge client:load variant="outline" className="text-sm">
                          #{tag}
                        </Badge>
                      ))}
                    </div>
                  </div>
                )}

                <!-- Back to Blog -->
                <div class="mt-12">
                  <a href="/blog" class="inline-flex items-center gap-2 text-muted-foreground hover:text-primary transition-colors font-medium">
                    <ArrowLeft className="size-4" />
                    Volver al blog
                  </a>
                </div>
              </div>

              <!-- Sidebar -->
              <aside class="lg:sticky lg:top-24 lg:self-start space-y-8">
                <!-- Share Card -->
                <div class="bg-gradient-to-br from-card to-card/50 backdrop-blur-sm rounded-2xl border p-6 shadow-lg">
                  <h3 class="font-bold text-lg mb-4 flex items-center gap-2">
                    <Share2 className="size-5 text-primary" />
                    Compartir
                  </h3>
                  <div class="space-y-3">
                    <Button 
                      client:load 
                      variant="default"
                      className="w-full gap-2"
                      onClick={() => {
                        const url = window.location.href;
                        const title = encodeURIComponent(document.title);
                        const text = encodeURIComponent('{entry.data.description}');
                        
                        if (navigator.share) {
                          navigator.share({
                            title: document.title,
                            text: '{entry.data.description}',
                            url: url,
                          });
                        } else {
                          // Copiar al portapapeles como fallback
                          navigator.clipboard.writeText(url).then(() => {
                            alert('¡Enlace copiado al portapapeles!');
                          });
                        }
                      }}
                    >
                      <Share2 className="size-4" />
                      Compartir artículo
                    </Button>
                    
                    <div class="grid grid-cols-3 gap-2 mt-2">
                      <a
                        href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center justify-center p-2 rounded-lg bg-[#1877F2] hover:bg-[#1877F2]/90 text-white transition-colors"
                        title="Compartir en Facebook"
                      >
                        <svg class="size-5" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                        </svg>
                      </a>
                      
                      <a
                        href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(entry.data.title)}&url=${encodeURIComponent(Astro.url.href)}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center justify-center p-2 rounded-lg bg-black hover:bg-black/90 text-white transition-colors"
                        title="Compartir en X (Twitter)"
                      >
                        <svg class="size-5" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                        </svg>
                      </a>
                      
                      <a
                        href={`https://wa.me/?text=${encodeURIComponent(entry.data.title + ' ' + Astro.url.href)}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center justify-center p-2 rounded-lg bg-[#25D366] hover:bg-[#25D366]/90 text-white transition-colors"
                        title="Compartir en WhatsApp"
                      >
                        <svg class="size-5" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                        </svg>
                      </a>
                    </div>
                  </div>
                </div>

                <!-- CTA Card -->
                <div class="bg-gradient-to-br from-primary to-success text-white rounded-2xl p-6 shadow-xl">
                  <h3 class="font-bold text-xl mb-3">¿Te gustó este artículo?</h3>
                  <p class="text-white/90 text-sm mb-4">
                    Empieza a gestionar tus finanzas hoy con Ahorra Tranquilo
                  </p>
                  <a href="https://app.ahorratranquilo.com" target="_blank" rel="noopener noreferrer">
                    <Button client:load variant="secondary" className="w-full font-semibold">
                      Crear Cuenta Gratis
                    </Button>
                  </a>
                </div>
              </aside>
            </div>
          </div>
        </div>
      </section>
    </article>

    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <section class="py-8 md:py-10 relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-b from-primary/5 via-success/5 to-background"></div>
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
          <div class="max-w-6xl mx-auto">
            <div class="flex items-center gap-3 mb-8">
              <div class="h-1 w-12 bg-gradient-to-r from-primary to-success rounded-full"></div>
              <h2 class="text-2xl md:text-3xl font-bold">Artículos relacionados</h2>
            </div>
            <div class="grid md:grid-cols-3 gap-6">
              {relatedPosts.map((post) => {
                const RelatedIcon = categoryIcons[post.data.category] || BookOpen;
                return (
                  <a href={`/blog/${post.slug}`} class="group">
                    <div class="bg-card rounded-2xl overflow-hidden border hover:shadow-2xl hover:-translate-y-2 transition-all duration-300">
                      <div class="relative overflow-hidden bg-muted h-48">
                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent z-10"></div>
                        <img
                          src={post.data.image || 'https://placehold.co/600x400/14b8a6/ffffff?text=Blog+Post'}
                          alt={post.data.title}
                          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                          loading="lazy"
                        />
                      </div>
                      <div class="p-5">
                        <Badge client:load variant="outline" className="gap-1.5 mb-3">
                          <RelatedIcon className="size-3.5" />
                          {post.data.category}
                        </Badge>
                        <h3 class="font-bold text-lg text-foreground group-hover:text-primary transition-colors line-clamp-2 mb-2">
                          {post.data.title}
                        </h3>
                        <p class="text-sm text-muted-foreground line-clamp-2 mb-3">
                          {post.data.description}
                        </p>
                        <div class="flex items-center gap-2 text-xs text-muted-foreground">
                          <Clock className="size-3" />
                          {post.data.readTime || '5 min'}
                        </div>
                      </div>
                    </div>
                  </a>
                );
              })}
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- CTA Section -->
    <section class="py-20 md:py-28 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-primary via-success to-primary"></div>
      <div class="absolute inset-0 opacity-20">
        <div class="absolute top-0 left-1/4 w-96 h-96 bg-white rounded-full mix-blend-overlay filter blur-3xl animate-blob"></div>
        <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-white rounded-full mix-blend-overlay filter blur-3xl animate-blob animation-delay-2000"></div>
      </div>
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="max-w-3xl mx-auto text-center text-white">
          <h2 class="text-3xl md:text-5xl font-bold mb-6">
            ¿Listo para tomar el control de tus finanzas?
          </h2>
          <p class="text-white/90 text-lg md:text-xl mb-10 leading-relaxed">
            Empieza hoy mismo con Ahorra Tranquilo. Es gratis, fácil y diseñado para colombianos.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="https://app.ahorratranquilo.com" target="_blank" rel="noopener noreferrer">
              <Button client:load size="lg" variant="secondary" className="font-semibold text-lg px-8 py-6 h-auto shadow-xl hover:shadow-2xl hover:scale-105 transition-all">
                Crear Cuenta Gratis
              </Button>
            </a>
            <a href="/funcionalidades">
              <Button client:load size="lg" variant="outline" className="font-semibold text-lg px-8 py-6 h-auto bg-white/10 text-white border-2 border-white hover:bg-white hover:text-primary shadow-xl hover:shadow-2xl hover:scale-105 transition-all">
                Ver Funcionalidades
              </Button>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style is:global>
  @keyframes blob {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(20px, -50px) scale(1.1); }
    50% { transform: translate(-20px, 20px) scale(0.9); }
    75% { transform: translate(50px, 50px) scale(1.05); }
  }

  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out;
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
    animation-fill-mode: backwards;
  }

  .animation-delay-400 {
    animation-delay: 0.4s;
    animation-fill-mode: backwards;
  }
</style>
