---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import MiniGame from '../components/MiniGame.tsx';
import { Badge } from '../components/ui/Badge.tsx';
import { Gamepad2, ArrowLeft } from 'lucide-react';
---

<Layout
  title="Mini Juego Financiero | Ahorra Tranquilo"
  description="Aprende educaci√≥n financiera jugando. Clasifica transacciones y mejora tu conocimiento sobre ingresos y gastos."
>
  <Navbar />
  <main id="main-content">
    <!-- Hero -->
    <section class="py-8 md:py-12 bg-background dark:bg-slate-900">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <a href="/" class="inline-flex items-center gap-2 text-muted-foreground hover:text-foreground mb-6 transition-colors">
          <ArrowLeft className="size-4" />
          Volver al inicio
        </a>
        <div class="text-center max-w-4xl mx-auto">
          <Badge variant="outline" className="mb-4 gap-1.5">
            <Gamepad2 className="size-4" />
            Educaci√≥n Financiera Interactiva
          </Badge>
          <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-foreground mb-4">
            Aprende Finanzas Jugando üéÆ
          </h1>
          <p class="text-muted-foreground text-base sm:text-lg md:text-xl mb-8 leading-relaxed">
            Mejora tu conocimiento financiero de forma divertida. Clasificar transacciones es la base para gestionar tu dinero inteligentemente.
          </p>

          {/* Stats del juego */}
          <div class="grid grid-cols-3 gap-4 max-w-2xl mx-auto">
            <div class="text-center p-4 rounded-xl bg-primary/10 border border-primary/20">
              <div class="text-2xl font-bold text-primary mb-1">60s</div>
              <div class="text-xs text-muted-foreground">Por Partida</div>
            </div>
            <div class="text-center p-4 rounded-xl bg-success/10 border border-success/20">
              <div class="text-2xl font-bold text-success mb-1">12</div>
              <div class="text-xs text-muted-foreground">Transacciones</div>
            </div>
            <div class="text-center p-4 rounded-xl bg-warning/10 border border-warning/20">
              <div class="text-2xl font-bold text-warning mb-1">‚àû</div>
              <div class="text-xs text-muted-foreground">Rachas Posibles</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Game Component -->
    <MiniGame client:load />

    <!-- Tips -->
    <section class="py-8 md:py-12 bg-gradient-to-b from-accent/30 to-background dark:from-slate-800 dark:to-slate-900">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-5xl mx-auto">
          <h2 class="text-2xl md:text-3xl font-bold mb-8 text-center text-foreground">
            üí° Aprende Mientras Juegas
          </h2>
          
          <div class="grid md:grid-cols-2 gap-6 mb-8">
            {/* Ingresos */}
            <div class="p-6 rounded-2xl bg-card border-2 border-success/30 hover:border-success/50 transition-all">
              <div class="flex items-center gap-3 mb-4">
                <div class="p-3 rounded-xl bg-success/20">
                  <svg class="size-6 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"></path>
                  </svg>
                </div>
                <h3 class="font-bold text-xl text-success">üí∞ Ingresos</h3>
              </div>
              <p class="text-muted-foreground mb-4 leading-relaxed">
                Cualquier dinero que <strong class="text-foreground">recibes o entra</strong> a tu bolsillo
              </p>
              <ul class="space-y-2 text-sm">
                <li class="flex items-start gap-2">
                  <span class="text-success">‚úì</span>
                  <span><strong>Salario:</strong> Tu pago mensual del trabajo</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-success">‚úì</span>
                  <span><strong>Freelance:</strong> Trabajos independientes</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-success">‚úì</span>
                  <span><strong>Bonos:</strong> Primas, aguinaldos, etc.</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-success">‚úì</span>
                  <span><strong>Ventas:</strong> Dinero de productos vendidos</span>
                </li>
              </ul>
            </div>

            {/* Gastos */}
            <div class="p-6 rounded-2xl bg-card border-2 border-destructive/30 hover:border-destructive/50 transition-all">
              <div class="flex items-center gap-3 mb-4">
                <div class="p-3 rounded-xl bg-destructive/20">
                  <svg class="size-6 text-destructive" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M20 12H4"></path>
                  </svg>
                </div>
                <h3 class="font-bold text-xl text-destructive">üí∏ Gastos</h3>
              </div>
              <p class="text-muted-foreground mb-4 leading-relaxed">
                Todo lo que <strong class="text-foreground">pagas o sale</strong> de tu bolsillo
              </p>
              <ul class="space-y-2 text-sm">
                <li class="flex items-start gap-2">
                  <span class="text-destructive">‚úì</span>
                  <span><strong>Compras:</strong> Supermercado, ropa, etc.</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-destructive">‚úì</span>
                  <span><strong>Servicios:</strong> Netflix, Spotify, gimnasio</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-destructive">‚úì</span>
                  <span><strong>Transporte:</strong> Gasolina, Uber, bus</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-destructive">‚úì</span>
                  <span><strong>Comida:</strong> Restaurantes, domicilios</span>
                </li>
              </ul>
            </div>
          </div>

          {/* Conceptos clave */}
          <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <div class="p-4 rounded-xl bg-gradient-to-br from-primary/10 to-primary/5 border border-primary/20">
              <h4 class="font-bold text-foreground mb-2 flex items-center gap-2">
                <svg class="size-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                Sistema de Racha
              </h4>
              <p class="text-sm text-muted-foreground">
                Respuestas correctas consecutivas multiplican tus puntos: x2, x3, x4...
              </p>
            </div>
            
            <div class="p-4 rounded-xl bg-gradient-to-br from-warning/10 to-warning/5 border border-warning/20">
              <h4 class="font-bold text-foreground mb-2 flex items-center gap-2">
                <svg class="size-5 text-warning" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Contrareloj
              </h4>
              <p class="text-sm text-muted-foreground">
                60 segundos para clasificar todas las transacciones que puedas
              </p>
            </div>
            
            <div class="p-4 rounded-xl bg-gradient-to-br from-info/10 to-info/5 border border-info/20 sm:col-span-2 lg:col-span-1">
              <h4 class="font-bold text-foreground mb-2 flex items-center gap-2">
                <svg class="size-5 text-info" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
                Mobile Friendly
              </h4>
              <p class="text-sm text-muted-foreground">
                Desliza con el dedo: ‚Üí Ingreso, ‚Üê Gasto. ¬°R√°pido y divertido!
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
