---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Contact from '../components/sections/Contact.astro';
import { Badge } from '../components/ui/Badge.tsx';
import { Mail, ArrowLeft } from 'lucide-react';
---

<Layout
  title="Contacto | Ahorra Tranquilo"
  description="¿Tienes preguntas? Estamos aquí para ayudarte. Contáctanos por email, WhatsApp o chat en vivo."
>
  <Navbar />
  <main id="main-content">
    <!-- Hero con diseño mejorado -->
    <section class="relative py-12 md:py-8 overflow-hidden">
      <!-- Background Effects -->
      <div class="absolute inset-0 bg-gradient-to-b from-primary/5 via-success/5 to-background"></div>
      <div class="absolute top-20 left-10 w-72 h-72 bg-primary/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-success/10 rounded-full blur-3xl"></div>
      
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative">
        <a href="/" class="inline-flex items-center gap-2 text-muted-foreground hover:text-primary mb-8 transition-colors group">
          <ArrowLeft className="size-4 group-hover:-translate-x-1 transition-transform" />
          Volver al inicio
        </a>
        <div class="text-center max-w-3xl mx-auto">
          <Badge variant="outline" className="mb-4 gap-1.5">
            <Mail className="size-3.5" />
            Contacto
          </Badge>
          <h1 class="text-4xl md:text-6xl font-bold text-foreground mb-6 bg-gradient-to-r from-foreground to-foreground/70 bg-clip-text">
            Estamos Aquí Para Ayudarte
          </h1>
          <p class="text-muted-foreground text-lg md:text-xl leading-relaxed">
            ¿Tienes preguntas, sugerencias o necesitas soporte? Nuestro equipo está listo para escucharte y brindarte la mejor atención
          </p>
          
          <!-- Stats rápidos -->
          <div class="grid grid-cols-3 gap-6 mt-10 max-w-2xl mx-auto">
            <div class="text-center">
              <div class="text-3xl font-bold text-primary mb-1">1h</div>
              <div class="text-sm text-muted-foreground">Tiempo de respuesta</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-success mb-1">24/7</div>
              <div class="text-sm text-muted-foreground">WhatsApp disponible</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-warning mb-1">98%</div>
              <div class="text-sm text-muted-foreground">Satisfacción</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Component -->
    <Contact />

    <!-- Additional Info con mejor diseño -->
    <section class="py-12 md:py-8 bg-gradient-to-b from-accent/30 to-background relative overflow-hidden">
      <div class="absolute top-0 right-0 w-64 h-64 bg-primary/5 rounded-full blur-3xl"></div>
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative">
        <div class="max-w-5xl mx-auto">
          <div class="text-center mb-10">
            <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-3">
              Más Formas de Contactarnos
            </h2>
            <p class="text-muted-foreground text-lg">
              Elige el canal que prefieras, estamos disponibles en todos
            </p>
          </div>
          <div class="grid md:grid-cols-3 gap-6">
            <a href="mailto:soporte@support.ahorratranquilo.com" class="group">
              <div class="text-center p-8 rounded-2xl bg-card border-2 border-border hover:border-primary/50 transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
                <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-primary/10 flex items-center justify-center group-hover:scale-110 transition-transform">
                  <Mail className="size-8 text-primary" />
                </div>
                <h3 class="font-semibold text-lg mb-2 group-hover:text-primary transition-colors">Email General</h3>
                <p class="text-muted-foreground text-sm mb-3">Para consultas generales y soporte</p>
                <p class="text-primary font-medium text-sm">soporte@support.ahorratranquilo.com</p>
              </div>
            </a>
            <a href="mailto:soporte@support.ahorratranquilo.com" class="group">
              <div class="text-center p-8 rounded-2xl bg-card border-2 border-border hover:border-success/50 transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
                <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-success/10 flex items-center justify-center group-hover:scale-110 transition-transform">
                  <svg class="size-8 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <h3 class="font-semibold text-lg mb-2 group-hover:text-success transition-colors">Soporte Técnico</h3>
                <p class="text-muted-foreground text-sm mb-3">Ayuda con problemas técnicos</p>
                <p class="text-success font-medium text-sm">soporte@support.ahorratranquilo.com</p>
              </div>
            </a>
            <a href="mailto:soporte@support.ahorratranquilo.com" class="group">
              <div class="text-center p-8 rounded-2xl bg-card border-2 border-border hover:border-warning/50 transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
                <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-warning/10 flex items-center justify-center group-hover:scale-110 transition-transform">
                  <svg class="size-8 text-warning" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                  </svg>
                </div>
                <h3 class="font-semibold text-lg mb-2 group-hover:text-warning transition-colors">Empresas</h3>
                <p class="text-muted-foreground text-sm mb-3">Planes corporativos y alianzas</p>
                <p class="text-warning font-medium text-sm">soporte@support.ahorratranquilo.com</p>
              </div>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
