---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { Badge } from '../components/ui/Badge';
import { Button } from '../components/ui/Button';
import { Card, CardContent } from '../components/ui/Card';
import { BookOpen, ArrowLeft, Clock, ArrowRight, TrendingUp, PiggyBank, Target, DollarSign } from 'lucide-react';
import { Image } from 'astro:assets';

// Import all blog images dynamically
const images = import.meta.glob('../assets/blogs/*.{png,jpg,jpeg,webp}', { eager: true });

// Get all blog posts and sort by date
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

// Icon mapping for categories
const categoryIcons = {
  'Educación Financiera': TrendingUp,
  'Presupuestos': Target,
  'Ahorro': PiggyBank,
  'Inversión': DollarSign,
  'Deudas': DollarSign,
  'Herramientas': Target,
  'Tips': TrendingUp,
};

// Format date
function formatDate(date: Date) {
  return date.toLocaleDateString('es-CO', { 
    year: 'numeric', 
    month: 'short', 
    day: 'numeric' 
  });
}
---

<Layout
  title="Blog de Finanzas Personales | Ahorra Tranquilo"
  description="Guías, tips y consejos para mejorar tu salud financiera. Aprende a gestionar tu dinero de forma inteligente."
>
  <Navbar />
  <main id="main-content">
    <!-- Hero -->
    <section class="py-6 md:py-8 bg-gradient-to-b from-info/5 to-background">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <a href="/" class="inline-flex items-center gap-2 text-muted-foreground hover:text-foreground mb-6 transition-colors">
          <ArrowLeft class="size-4" />
          Volver al inicio
        </a>
        <div class="text-center max-w-3xl mx-auto">
          <Badge variant="outline" class="mb-4">
            <BookOpen class="size-3" />
            Blog
          </Badge>
          <h1 class="text-4xl md:text-5xl font-bold text-foreground mb-4">
            Blog de Finanzas Personales
          </h1>
          <p class="text-muted-foreground text-lg">
            Aprende a gestionar tu dinero con nuestros artículos, guías y consejos prácticos
          </p>
        </div>
      </div>
    </section>

    <!-- Blog Posts Grid -->
    <section class="py-8 md:py-10">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
          {
            sortedPosts.map((post) => {
              const Icon = categoryIcons[post.data.category] || BookOpen;
              const imagePath = post.data.image ? `../assets/blogs/${post.data.image.split('/').pop()}` : null;
              const postImage = imagePath && images[imagePath] ? images[imagePath].default : null;
              return (
                <Card className="overflow-hidden group hover:shadow-xl transition-all duration-300">
                  <a href={`/blog/${post.slug}`}>
                    <div class="relative overflow-hidden bg-muted h-48">
                      {postImage ? (
                        <Image
                          src={postImage}
                          alt={post.data.title}
                          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                          loading="lazy"
                        />
                      ) : (
                        <img
                          src={`https://placehold.co/600x400/14b8a6/ffffff?text=${encodeURIComponent(post.data.title)}`}
                          alt={post.data.title}
                          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                          loading="lazy"
                        />
                      )}
                      {post.data.featured && (
                        <div class="absolute top-4 left-4">
                          <Badge className="bg-primary text-primary-foreground">Destacado</Badge>
                        </div>
                      )}
                    </div>

                    <CardContent className="p-6">
                      <div class="flex items-center gap-4 mb-3">
                        <Badge variant="outline" className="gap-1">
                          <Icon className="size-3" />
                          {post.data.category}
                        </Badge>
                        <span class="text-sm text-muted-foreground flex items-center gap-1">
                          <Clock class="size-4" />
                          {post.data.readTime || '5 min'}
                        </span>
                      </div>

                      <h3 class="text-xl font-semibold text-foreground mb-2 group-hover:text-primary transition-colors line-clamp-2">
                        {post.data.title}
                      </h3>

                      <p class="text-muted-foreground mb-4 line-clamp-3">{post.data.description}</p>

                      <div class="flex items-center justify-between">
                        <span class="text-sm text-muted-foreground">{formatDate(post.data.pubDate)}</span>
                        <Button client:load variant="ghost" size="sm" className="gap-2">
                          Leer más
                          <ArrowRight class="size-4" />
                        </Button>
                      </div>
                    </CardContent>
                  </a>
                </Card>
              );
            })
          }
        </div>

        {sortedPosts.length === 0 && (
          <div class="text-center py-12">
            <BookOpen class="size-16 mx-auto text-muted-foreground mb-4" />
            <h3 class="text-xl font-semibold mb-2">No hay artículos disponibles</h3>
            <p class="text-muted-foreground">Pronto publicaremos contenido nuevo.</p>
          </div>
        )}
      </div>
    </section>
  </main>
  <Footer />
</Layout>
