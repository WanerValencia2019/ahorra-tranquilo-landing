---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { Badge } from '../components/ui/Badge.tsx';
import { Button } from '../components/ui/Button.tsx';
import { Card, CardContent } from '../components/ui/Card.tsx';
import { BookOpen, ArrowLeft, Clock, ArrowRight, TrendingUp, PiggyBank, Target, DollarSign } from 'lucide-react';
import { Image } from 'astro:assets';

// Import all blog images dynamically
const images = import.meta.glob('../assets/blogs/*.{png,jpg,jpeg,webp}', { eager: true });

// Get all blog posts and sort by date
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

// Icon mapping for categories
const categoryIcons = {
  'Educaci칩n Financiera': TrendingUp,
  'Presupuestos': Target,
  'Ahorro': PiggyBank,
  'Inversi칩n': DollarSign,
  'Deudas': DollarSign,
  'Herramientas': Target,
  'Tips': TrendingUp,
};

// Format date
function formatDate(date: Date) {
  return date.toLocaleDateString('es-CO', { 
    year: 'numeric', 
    month: 'short', 
    day: 'numeric' 
  });
}
---

<Layout
  title="Blog de Finanzas Personales | Ahorra Tranquilo"
  description="Gu칤as, tips y consejos para mejorar tu salud financiera. Aprende a gestionar tu dinero de forma inteligente."
>
  <Navbar />
  <main id="main-content">
    <!-- Hero -->
    <section class="relative py-8 md:py-12 lg:py-16 overflow-hidden">
      <!-- Background decorativo -->
      <div class="absolute inset-0 bg-gradient-to-b from-info/5 via-background to-primary/5"></div>
      <div class="absolute top-20 left-10 w-72 h-72 bg-info/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-primary/10 rounded-full blur-3xl"></div>

      <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <a href="/" class="inline-flex items-center gap-1.5 sm:gap-2 text-xs sm:text-sm text-muted-foreground hover:text-info transition-colors mb-6 sm:mb-8 font-medium group">
          <ArrowLeft className="size-3 sm:size-4 group-hover:-translate-x-1 transition-transform" />
          Volver al inicio
        </a>
        
        <div class="text-center max-w-4xl mx-auto">
          <!-- Badge mejorado -->
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gradient-to-r from-info/10 to-primary/10 border border-info/20 mb-4 sm:mb-6 animate-fade-in">
            <BookOpen className="size-4 text-info animate-pulse" />
            <span class="text-sm font-semibold text-info">Blog de Finanzas</span>
          </div>

          <!-- T칤tulo con gradiente -->
          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-extrabold tracking-tight mb-4 sm:mb-6 text-foreground animate-fade-in-up">
            Blog de Finanzas Personales
          </h1>

          <!-- Descripci칩n mejorada -->
          <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-muted-foreground mb-6 sm:mb-8 leading-relaxed animate-fade-in-up animation-delay-200">
            Aprende a gestionar tu dinero con nuestros art칤culos, gu칤as y consejos pr치cticos
          </p>

          <!-- Stats r치pidos -->
          <div class="grid grid-cols-3 gap-3 sm:gap-4 md:gap-8 max-w-2xl mx-auto animate-fade-in-up animation-delay-400">
            <div class="text-center">
              <div class="text-2xl sm:text-3xl font-bold text-info mb-1">游닄</div>
              <div class="text-xs sm:text-sm text-muted-foreground">Art칤culos</div>
            </div>
            <div class="text-center">
              <div class="text-2xl sm:text-3xl font-bold text-primary mb-1">游꿢</div>
              <div class="text-xs sm:text-sm text-muted-foreground">Tips Pr치cticos</div>
            </div>
            <div class="text-center">
              <div class="text-2xl sm:text-3xl font-bold text-success mb-1">游눠</div>
              <div class="text-xs sm:text-sm text-muted-foreground">Gu칤as</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Blog Posts Grid -->
    <section class="py-6 md:py-8 lg:py-10 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-b from-background via-primary/5 to-background"></div>
      <div class="absolute top-20 left-10 w-72 h-72 bg-info/5 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-10 w-72 h-72 bg-primary/5 rounded-full blur-3xl"></div>
      
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 md:gap-8">
          {
            sortedPosts.map((post) => {
              const Icon = categoryIcons[post.data.category] || BookOpen;
              const imagePath = post.data.image ? `../assets/blogs/${post.data.image.split('/').pop()}` : null;
              const postImage = imagePath && images[imagePath] ? images[imagePath].default : null;
              return (
                <Card className="overflow-hidden group hover:shadow-xl transition-all duration-300">
                  <a href={`/blog/${post.slug}`}>
                    <div class="relative overflow-hidden bg-muted h-40 sm:h-48">
                      {postImage ? (
                        <Image
                          src={postImage}
                          alt={post.data.title}
                          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                          loading="lazy"
                        />
                      ) : (
                        <img
                          src={`https://placehold.co/600x400/14b8a6/ffffff?text=${encodeURIComponent(post.data.title)}`}
                          alt={post.data.title}
                          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                          loading="lazy"
                        />
                      )}
                      {post.data.featured && (
                        <div class="absolute top-4 left-4">
                          <Badge className="bg-primary text-primary-foreground">Destacado</Badge>
                        </div>
                      )}
                    </div>

                    <CardContent className="p-4 sm:p-6">
                      <div class="flex items-center gap-2 sm:gap-4 mb-2 sm:mb-3">
                        <Badge variant="outline" className="gap-1 text-xs">
                          <Icon className="size-3" />
                          <span class="hidden sm:inline">{post.data.category}</span>
                        </Badge>
                        <span class="text-xs sm:text-sm text-muted-foreground flex items-center gap-1">
                          <Clock className="size-3 sm:size-4" />
                          {post.data.readTime || '5 min'}
                        </span>
                      </div>

                      <h3 class="text-base sm:text-lg md:text-xl font-semibold text-foreground mb-1.5 sm:mb-2 group-hover:text-primary transition-colors line-clamp-2">
                        {post.data.title}
                      </h3>

                      <p class="text-xs sm:text-sm text-muted-foreground mb-3 sm:mb-4 line-clamp-2 sm:line-clamp-3">{post.data.description}</p>

                      <div class="flex items-center justify-between">
                        <span class="text-xs sm:text-sm text-muted-foreground">{formatDate(post.data.pubDate)}</span>
                        <Button client:load variant="ghost" size="sm" className="gap-1 sm:gap-2 text-xs sm:text-sm">
                          Leer m치s
                          <ArrowRight className="size-3 sm:size-4" />
                        </Button>
                      </div>
                    </CardContent>
                  </a>
                </Card>
              );
            })
          }
        </div>

        {sortedPosts.length === 0 && (
          <div class="text-center py-12">
            <BookOpen className="size-16 mx-auto text-muted-foreground mb-4" />
            <h3 class="text-xl font-semibold mb-2">No hay art칤culos disponibles</h3>
            <p class="text-muted-foreground">Pronto publicaremos contenido nuevo.</p>
          </div>
        )}
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style is:global>
  @keyframes blob {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(20px, -50px) scale(1.1); }
    50% { transform: translate(-20px, 20px) scale(0.9); }
    75% { transform: translate(50px, 50px) scale(1.05); }
  }

  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out;
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
    animation-fill-mode: backwards;
  }

  .animation-delay-400 {
    animation-delay: 0.4s;
    animation-fill-mode: backwards;
  }
</style>
