---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Tools from '../components/Tools';
import { Badge } from '../components/ui/badge';
import { Calculator, ArrowLeft } from 'lucide-react';
import { Button } from '../components/ui/Button';
---

<Layout
  title="Herramientas Financieras | Ahorra Tranquilo"
  description="Calculadoras financieras gratis: meta de ahorro, presupuesto 50/30/20 y más herramientas para gestionar tu dinero."
>
  <Navbar />
  <main id="main-content">
    <!-- Hero -->
    <section class="py-12 md:py-16 bg-gradient-to-b from-primary/5 to-background">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <a href="/" class="inline-flex items-center gap-2 text-muted-foreground hover:text-foreground mb-6 transition-colors">
          <ArrowLeft class="size-4" />
          Volver al inicio
        </a>
        <div class="text-center max-w-3xl mx-auto">
          <Badge variant="outline" class="mb-4">
            <Calculator class="size-3" />
            Herramientas
          </Badge>
          <h1 class="text-4xl md:text-5xl font-bold text-foreground mb-4">
            Calculadoras Financieras
          </h1>
          <p class="text-muted-foreground text-lg">
            Planifica tus finanzas con nuestras herramientas interactivas y completamente gratuitas
          </p>
        </div>
      </div>
    </section>

    <!-- Tools Component -->
    <Tools client:load />

    <!-- CTA -->
    <section class="py-16 md:py-24 bg-accent/30">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-2xl md:text-3xl font-semibold mb-4">
          ¿Quieres más herramientas avanzadas?
        </h2>
        <p class="text-muted-foreground mb-6 max-w-2xl mx-auto">
          En la app encontrarás calculadoras de inversión, simuladores de crédito, y mucho más
        </p>
        <Button client:load size="lg">
          Explorar la App
        </Button>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
